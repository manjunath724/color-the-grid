<div class='container-fluid'>
  <% if notice %>
    <div id="success" class="row alert alert-success rounded alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <center><%= notice %></center>
    </div>
  <% end %>
  <% if alert %>
    <div id="error" class="row alert alert-danger rounded alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <center><%= alert %></center>
    </div>
  <% end %>
</div>
